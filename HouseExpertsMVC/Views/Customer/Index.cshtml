@using System.Web.Mvc.Html
@model IEnumerable<HouseExpertsMVC.Models.Customer>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@Html.ActionLink("Add New Customer", "New", "Customer", null, new {@class = "btn btn-primary"})

<table class="table table-bordered table-hover table-condensed">
    <thead>
    <tr>
        <th>Name</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@Html.ActionLink(customer.FirstName  + " " + customer.LastName, "Details", "Customer", new {id = customer.ID}, null)</td>
        </tr>
    }
    </tbody>
</table>
