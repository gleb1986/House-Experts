@model HouseExpertsMVC.Models.CustomerFormViewModel
@{
    ViewBag.Title = "CustomerForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>CustomerForm</h2>

@using (Html.BeginForm("Save", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.FirstName)
        @Html.TextBoxFor(m => m.Customer.FirstName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.LastName)
        @Html.TextBoxFor(m => m.Customer.LastName, new { @class = "form-control" })
    </div>

    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsAcive) Is Active
        </label>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Customer.CustomerTypeID)
        @Html.DropDownListFor(m => m.Customer.CustomerTypeID,
            new SelectList(Model.CustomerTypes, "ID", "Name"),
            "Select customer type", new {@class = "form-control"})
    </div>
    @Html.HiddenFor(m => m.Customer.ID)
    <button type="submit" class="btn btn-primary">Save</button>
}

